<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row row-cols-lg-1 row-cols-md-2 row-cols-sm-1 g-3">
    <% for(let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card" style="width: 100%;">
            <img src="<%= listing.image.url %>" alt="Listing Image" style="max-width: 100%; border-radius: 10px;" />
            <div class="card-img-overlay">
              <b><%= listing.title %></b>
            </div>
            <div class="card-body">
              <!-- <b><p class="card-text"><%= listing.title %></p></b> -->
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</body>
