<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="container mt-3">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3">
      <% for (let listing of allListings) { %>
        <div class="col d-flex align-items-stretch">
          <a href="/listings/<%= listing._id %>" class="listing-link w-100">
            <div class="card h-100">
              <img class="listing-img card-img-top" src="<%= listing.image.url %>" alt="Listing Image">
              <div class="card-img-overlay">
                <b><%= listing.title %></b>
              </div>
              <div class="card-body">
                <!-- <b><p class="card-text"><%= listing.title %></p></b> -->
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>
</body>


