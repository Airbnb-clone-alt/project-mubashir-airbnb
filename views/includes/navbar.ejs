<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Airbnb Responsive Navbar</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
    }
background: {
linear-gradient(to right, #e96443, #904e95);
}




    nav {
      background-color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 14px 30px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .nav-left {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .nav-menu {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .logo {
      font-size: 26px;
      font-weight: bold;
      color: #ff385c;
    }

    .nav-link, .btn, .auth-link {
      text-decoration: none;
      font-size: 14px;
      color: #444;
      transition: 0.2s;
    }

    .nav-link:hover, .auth-link:hover {
      color: #ff385c;
    }

    .btn {
      background-color: #ff385c;
      color: white;
      padding: 8px 16px;
      border-radius: 30px;
      font-weight: 500;
    }

    .btn:hover {
      background-color: #e03350;
    }

    .hamburger {
      display: none;
      font-size: 24px;
      background: none;
      border: none;
      cursor: pointer;
      color: #333;
    }

    /* Dropdown for mobile */
    .mobile-menu {
      display: none;
      flex-direction: column;
      gap: 10px;
      background-color: white;
      padding: 10px 30px;
    }

    .mobile-menu.show {
      display: flex;
    }

    @media (max-width: 768px) {
      .nav-menu {
        display: none;
      }

      .hamburger {
        display: block;
      }

      .nav-left .btn {
        display: none;
      }
    }
  </style>
</head>
<body>

  <nav>
    <!-- Left side: Logo + Add new Listing -->
    <div class="nav-left">
      <div class="logo">Coder<span style="color: #000;">mubashir</span></div>
      <a href="/listings/new" class="btn">Add Listing</a>
    </div>

    <!-- Right side: Nav items or hamburger -->
    <div class="nav-menu">
      <% if(!currUser) { %>
        <b><a href="/login" class="auth-link">Login</a></b>
      <b>  <a href="/signup" class="auth-link">Signup</a></b>
      <% } %>
      <% if(currUser) { %>
        <a href="/logout" class="auth-link">Logout</a>
      <% } %>
    </div>

    <!-- Hamburger for mobile -->
    <button class="hamburger" onclick="toggleMobileMenu()">â˜°</button>
  </nav>

  <!-- Mobile dropdown menu -->
  <div class="mobile-menu" id="mobileMenu">
    <a href="/listings/new" class="btn">Add New Listing</a>
    <% if(!currUser) { %>
      <a href="/login" class="auth-link">Login</a>
      <a href="/signup" class="auth-link">Signup</a>
    <% } %>
    <% if(currUser) { %>
      <a href="/logout" class="auth-link">Logout</a>
    <% } %>
  </div>

  <script>
    function toggleMobileMenu() {
      document.getElementById('mobileMenu').classList.toggle('show');
    }
  </script>

</body>
</html>
